<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__system_message__icon"
        android:layout_width="@dimen/wire__otr__shield__small_width"
        android:layout_height="@dimen/wire__otr__shield__small_width"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/wire__padding__regular"
        android:gravity="center"
        android:textColor="?wirePrimaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.waz.zclient.common.views.LinkTextView
        android:id="@+id/ttv__system_message__text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wire__padding__32"
        android:lineSpacingExtra="@dimen/wire__text_spacing__medium"
        android:textColor="?wirePrimaryTextColor"
        android:textSize="@dimen/wire__text_size__small"
        app:layout_constraintBottom_toTopOf="@+id/service_warning_text"
        app:layout_constraintStart_toEndOf="@+id/gtv__system_message__icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:w_font="@string/wire__typeface__light"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/service_warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_red"
        android:textSize="@dimen/wire__text_size__small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ttv__system_message__text"
        app:layout_constraintTop_toBottomOf="@+id/ttv__system_message__text"
        app:w_font="@string/wire__typeface__light"
        android:visibility="gone"/>

</merge>
